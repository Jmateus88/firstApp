

<div class="col-sm-6 col-md-4">
  <div class="thumbnail">  
    <h3 class="text-center"><span class="label label-info"><%= product.name %></span></h3>
    <div class="img-container">
      <%= image_tag(product.image_url, class: "img-responsive") %>    
    </div>
    <div class="caption">
      <div class="row">
        <% cache product do %>
          <div class="col-md-6 col-xs-6">
            <h3><%= product.colour %></h3>
          </div>
          <div class="col-md-6 col-xs-6 price">
            <h3><label><%= product.price %>â‚¬</label></h3>
          </div>
        <% end %>  
      </div>
      <p><%= product.description %></p>
      <div class="row">
        <div class="col-md-6">
          <%= link_to 'Show', product, :class=>"btn btn-primary" %>
        </div>
        <div class="col-md-6">
          <a href="#" class="btn btn-success"><span class="glyphicon glyphicon-shopping-cart"></span> Buy</a>
        </div>  <!-- not working yet -->
      
        <div class="col-md-6">
          <%= link_to 'Edit', edit_product_path(product), :class=>"btn btn-warning" %>
        </div>
        <div class="col-md-6">
          <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger btn-product" %>
        </div>
      </div>
    </div>            
  </div>              
</div>
  
  
