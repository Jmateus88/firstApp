<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, :class =>"form-signin") do |f| %>
  <%= devise_error_messages! %>

    <%= f.label :email, :class => "sr-only" %>
    <%= f.email_field :email, :autofocus => true, :placeholder => 'Email address', :class=>"form-control" %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <%= f.label :password, :class => "sr-only" %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off",:placeholder => 'Password', :class=>"form-control" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>

  
    <%= f.label :password_confirmation, :class => "sr-only" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => 'Password', :class=>"form-control" %>
  
    <%= f.label :current_password, :class => "sr-only" %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", :placeholder => 'Password', :class=>"form-control" %>

    <%= f.submit "Update" %>

<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
