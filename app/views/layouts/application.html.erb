<!DOCTYPE html>
<html>
  <head>
    <title>Nameofapp</title>
    <%= csrf_meta_tags %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
  </head>

  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <%= link_to('HÃ¡ vida no campo', static_pages_index_path, :class => "navbar-brand") %>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to('Best sellers', static_pages_landing_page_path) %></li>
            <li><%= link_to('Products', products_path) %></li>
            <li><%= link_to('About', static_pages_about_path) %></li>
            <li><%= link_to('Contacts', static_pages_contact_path) %></li> 
            <li>
              <%= form_tag("/products", method: "get", class: 'navbar-form') do %>
                
                <%= text_field_tag(:q, nil, class: 'form-control') %>
                <%= submit_tag "Search",:class => "btn btn-default" %>
              <% end %>
            </li>
            <li>
              <% if user_signed_in? %>
              <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
              <% else %>
              <%= link_to('Login', new_user_session_path) %>
              <% end %>
            </li>
          </ul>                   
        </div>
      </div>
    </nav>

    
    
    <Div class="container content">
      <!-- Alert box -->
      <div class="alert-message-box">
        <% if notice %>
          <p id="notice" class="alert alert-info"><%= notice %></p> 
        <% end %>
        <% if alert %>
          <p id="alert" class="alert alert-info"><%= alert %></p>
        <% end %> <!-- end of alert box -->
      </Div>  
      <%= yield %>
    </Div>
    
    
    <footer class="footer">
      <div class="container">
        <p class="text-muted">&copy; 2015 Ha vida no Campo</p>
      </div>
    </footer>
    
  </body>
</html>
