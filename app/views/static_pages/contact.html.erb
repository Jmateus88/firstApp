<h1>Contact us</h1>

<%= flash[:notice] %>

<%= form_tag("/static_pages/thank_you") do %>
<div class="border-form-div">
  
    <div class="form-group">
      <%= label_tag :name %>
      <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name", :required => true %>
    </div>      
    <div class="form-group">
      <%= label_tag :email, "Email Address" %>
      <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email", :required => true %>
    </div>
    <div class="form-group">
      <%= label_tag :message %>
      <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message" %>
    </div>    

    <%= submit_tag "Send" %>   
    <% end %>  
  
</div>


<div class="email-contact text-center">
  <h3>Our email</h3>
  <p>havidanocampo@gmail.com</p>
</div>  